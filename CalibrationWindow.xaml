<Window x:Class="thermalCamera.CalibrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calibration" Height="300" Width="600">
    <Grid>
        <DataGrid x:Name="calibrationDataGrid" AutoGenerateColumns="False" CanUserAddRows="True" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Raw Value (Cam 1)" Binding="{Binding Camera1.RawValue, Mode=TwoWay}" />
                <DataGridTextColumn Header="Reference Temp (Cam 1)" Binding="{Binding Camera1.ReferenceTemperature, Mode=TwoWay}" />
                <DataGridTextColumn Header="Raw Value (Cam 2)" Binding="{Binding Camera2.RawValue, Mode=TwoWay}" />
                <DataGridTextColumn Header="Reference Temp (Cam 2)" Binding="{Binding Camera2.ReferenceTemperature, Mode=TwoWay}" />
            </DataGrid.Columns>
        </DataGrid>


        <Button Content="Save" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="SaveButton_Click"/>
    </Grid>
</Window>
